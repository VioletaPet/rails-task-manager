<h2>Edit task</h2>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, value: @task.title %>
  <%= f.label :details %>
  <%= f.text_area :details, value: @task.details %>
  <%= f.check_box :completed, checked: @task.completed %>
  <%= f.label :completed %>
  <%= f.submit %>
<% end %>
